<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/unlock_option_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:contentPadding="16dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardElevation="0dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            xmlns:app="http://schemas.android.com/tools"
            android:id="@+id/button_icon_unlock"
            android:layout_width="@dimen/icon_size"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_lock_24"
            card_view:tint="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/button_icon_unlock">

            <TextView
                android:id="@+id/unlock_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/title_placeholder"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/unlock_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/subtitle_placeholder"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:alpha="0.4"/>

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
