<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/progressbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/text_progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/state_authenticating"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/blue_grey"/>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:indeterminateDuration="@integer/material_motion_duration_long_1"
        android:indeterminate="true"
        android:max="100"
        app:trackCornerRadius="6dp"
        app:trackThickness="8dp"
        app:trackColor="@color/dark_grey"
        app:indicatorColor="@color/blue_grey">
    </com.google.android.material.progressindicator.LinearProgressIndicator>
</LinearLayout>
